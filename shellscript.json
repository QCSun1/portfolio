"case statement": {

	"prefix": "case",

	"body": [
		"case $var in",
		")",
			"#input",
			";;",
		")",
			"#input",
			";;",
		")",
			"#input",
			";;",
		")",
			"#input",
			";;",
		"*)",
			"#default",
			";;",
		"esac"
	],
	"description": "add case statement"
	},
	

"user prompt": {
	"prefix": "prompt_user",
	"body": [
		"read -rp \"prompt\" var"
	],
	"description": "add user prompt"
},
