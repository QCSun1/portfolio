	// }


"add a shebang": { 

	"prefix": "shebang", 
  
	"body": [ 
  
		"#!/bin/bash" 
  
	], 
  
	"description": "Add shebang to script" 
  
},


"colour text": {
	
	"prefix": "colour",

	"body": [
		"reset='\\033[0m'",
		"black='\\033[30m'",
		"red='\\033[31m'",
		"green='\\033[32m'",
		"brown='\\033[33m'",
		"blue='\\033[34m'",
		"purple='\\033[35m'",
		"cyan='\\033[36m'",
		"grey='\\033[37m'",
		"\n\\${enter_colour}enter_text\\${reset}"
	],

	"description": "Change text colours"

},

"black text": {
	"prefix": "black",
	"body": [
		"echo -e \"\\033[30mENTER_TEXT\\033[0m\""
	],
	"description": "Change text colour to black"
},

